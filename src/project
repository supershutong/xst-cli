/**
 * åˆ›å»ºã€åˆå§‹åŒ–é¡¹ç›®
 * é—®è¯¢ã€ä¸‹è½½æ¨¡æ¿ã€å¤åˆ¶ï¼Œå†™å…¥æ¨¡æ¿ã€gitåˆå§‹åŒ–ã€å®‰è£…ä¾èµ–
 */
const inquirer = require('inquirer') // å‘½ä»¤è¡Œäº¤äº’é—®è¯¢
const fse = require('fs-extra') // æ–‡ä»¶æ“ä½œå¢žå¼ºåº“
const download = require('download-git-repo') // è¿œç¨‹æ–‡ä»¶ä¸‹è½½ï¼Œç”¨äºŽæ‹‰å–gitä¸­çš„é¡¹ç›®æ¨¡æ¿
const chalk = require('chalk') // æŽ§åˆ¶å°å­—ç¬¦æ ·å¼
const path = require('path')
const memFs = require('mem-fs')
const editor = require('mem-fs-editor') // æ¨¡æ¿å¤åˆ¶åŠåµŒå…¥æ¨¡æ¿å­—ç¬¦ä¸²ï¼Œä¾èµ–äºŽ mem-fs
const ora = require('ora') // ä¼˜é›…ç»ˆç«¯spinnerç­‰å¾…åŠ¨ç”»
const { exec } = require('child_process')
const { getDirFileName } = require('./utils')
const {
  INJECT_FILES,
  FRAMEWORKS,
  VUE_TEMPLATE,
  REACT_TEMPLATES,
  REACT_NATIVE_TEMPLATE
} = require('./constants')

function Project(options) {
  this.config = Object.assign(
    { projectName: '', description: '', template: '', author: '' },
    options
  )
  const store = memFs.create()
  this.memFsEditor = editor.create(store)
}

Project.prototype.create = function () {
  this.inquire().then(answer => {
    this.config = Object.assign(this.config, answer) // æž„å»ºé…ç½®
    // é€‰æ‹©æ¨¡æ¿
    this.selectTemplate().then(answer2 => {
      this.config = Object.assign(this.config, answer2)
      this.generate() // ç”Ÿæˆæ¡†æž¶
    })
  })
}

Project.prototype.selectTemplate = function () {
  const prompts = []
  prompts.push({
    name: 'template',
    type: 'list',
    message: 'Please select a template: ',
    choices:
      this.config.framework === 'Vue'
        ? VUE_TEMPLATE
        : this.config.framework === 'React'
        ? REACT_TEMPLATES
        : REACT_NATIVE_TEMPLATE
  })
  return inquirer.prompt(prompts)
}

Project.prototype.inquire = function () {
  const prompts = []
  const { projectName, description, author } = this.config
  if (projectName === '') {
    prompts.push({
      type: 'input',
      name: 'projectName',
      message: 'Please input project name: ',
      validate(input) {
        if (!input) {
          return 'Project name must not null'
        }
        if (fse.existsSync(input)) {
          return `The folder ${input} is exist, please change one`
        }
        return true
      }
    })
  } else if (fse.existsSync(projectName)) {
    prompts.push({
      type: 'input',
      name: 'projectName',
      message: `The folder ${input} is exist, please change one`,
      validate(input) {
        if (!input) {
          return 'Project name must not null'
        }
        if (fse.existsSync(input)) {
          return `The folder ${input} is exist, please change one`
        }
        return true
      }
    })
  }

  if (description === '') {
    prompts.push({
      type: 'input',
      name: 'description',
      message: 'Please input project desc'
    })
  }

  if (author === '') {
    prompts.push({
      type: 'input',
      name: 'author',
      message: 'Please input project author'
    })
  }

  prompts.push({
    name: 'framework',
    type: 'list',
    message: `Please pick a framework`,
    choices: FRAMEWORKS
  })

  return inquirer.prompt(prompts)
}

/**
 * æ¨¡æ¿æ›¿æ¢
 * @param {string} source æºæ–‡ä»¶è·¯å¾„
 * @param {string} target ç›®æ ‡æ–‡ä»¶è·¯å¾„
 * @param {object} data æ›¿æ¢æ–‡æœ¬å­—æ®µ
 */
Project.prototype.injectTemplate = function (source, target, data) {
  this.memFsEditor.writeJSON(
    target,
    Object.assign({}, this.memFsEditor.readJSON(source), data)
  )
}

/**
 * ä¸‹è½½æ¨¡æ¿
 */
Project.prototype.generate = function () {
  const { projectName, description, autor, template } = this.config
  const projectPath = path.join(process.cwd(), projectName)
  const downloadPath = path.join(projectPath, '__download__')

  const downloadSpinner = ora('ðŸš€ Download template...')
  downloadSpinner.start()
  // ä¸‹è½½ git repo
  download(template, downloadPath, { clone: true }, err => {
    // nodeçº¦å®šï¼šå…ˆå¤„ç†å¼‚å¸¸
    if (err) {
      downloadSpinner.color = 'red'
      downloadSpinner.fail(err.message)
      downloadSpinner.fail(
        `Please check your network, make sure u can access to template ${template}`
      )
      fse.remove(downloadPath)
      fse.remove(projectPath)
      return
    }

    downloadSpinner.color = 'green'
    downloadSpinner.succeed('ðŸŽ‰ Download Success')

    // å¤åˆ¶æ–‡ä»¶
    const copyFiles = getDirFileName(downloadPath)
    copyFiles.forEach(file => {
      fse.copySync(path.join(downloadPath, file), path.join(projectPath, file))
      console.log(
        `${chalk.green('âœ”')}${chalk.grey(`Create: ${projectName}/${file}`)}`
      )
    })

    INJECT_FILES.forEach(file => {
      this.injectTemplate(
        path.join(downloadPath, file),
        path.join(projectName, file),
        {
          name: projectName,
          description,
          author
        }
      )
    })

    this.memFsEditor.commit(() => {
      INJECT_FILES.forEach(file => {
        console.log(`ðŸšš  ${chalk.grey(`Create: ${projectName}/${file}`)}`)
      })
      fse.remove(downloadPath)
      process.chdir(projectPath)

      // gitåˆå§‹åŒ–
      const gitInitSpinner = ora(`âš“ git init`)
      gitInitSpinner.start()

      const gitInit = exec('git init')
      gitInit.on('close', code => {
        if (code === 0) {
          gitInitSpinner.color = 'green'
          gitInitSpinner.succeed(gitInit.stdout.read())
        } else {
          gitInitSpinner.color = 'red'
          gitInitSpinner.fail(gitInit.stderr.read())
        }
        console.log() // æŽ§åˆ¶å°æ‰“å°ä¸€è¡Œç©ºè¡Œ

        // å®‰è£…ä¾èµ–
        const installSpinner = ora(
          '>>> Installing dependency. This might take a while...'
        )
        installSpinner.start()
        exec('npm install', (error, stdout, stderr) => {
          if (error) {
            installSpinner.color = 'red'
            installSpinner.fail(
              chalk.red('ðŸ”— Dependency installed, please try again.')
            )
            console.log(error)
          } else {
            installSpinner.color = 'green'
            installSpinner.succeed('ðŸŽ‰ Dependency installed success.')
            console.log(`${stderr}${stdout}`)
            console.log(
              chalk.default(
                `ðŸŽ‰  Successfully created project ${chalk.yellow(projectName)}`
              )
            )
            console.log(
              chalk.default(`ðŸ‘‰  Get started with the following commands:`)
            )
            console.log()
            console.log(chalk.cyan(` ${chalk.gray('$')} cd ${projectName}`))
            console.log(chalk.cyan(` ${chalk.gray('$')} npm start`))
          }
        })
      })
    })
  })
}

module.exports = Project
